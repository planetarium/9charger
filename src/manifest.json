{
  "manifest_version": 3,
  "name": "9Charger",
  "version": "0.0.0",
  "description": "Nine Chronicles AP Recharge Notifier / Recharge Query Browser Extension",

  "action": {
    "default_icon": {},
    "default_title": "9Charger"
